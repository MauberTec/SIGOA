    <link href="~/Scripts/jquery-ui.css" rel="stylesheet" />

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/datetime-moment.js"></script>


    @section Scripts{

        <script src="~/Scripts/LogSistema/LogSistema.js"></script>

    }

