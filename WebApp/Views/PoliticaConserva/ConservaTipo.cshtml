<div class="modal fade" id="ModalConservaTipo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="margin-left:150px; width:550px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title text-center"><b><label id="lblModalHeader">Conserva Tipo</label></b></h3>
            </div>
            <form class="form-horizontal" onkeydown="if (event.keyCode == 13) { event.preventDefault(); return false; }">
                <br />
                <div class="modal-body form-group">

                    <div class="form-group">
                        <label class="control-label col-sm-2">Código<span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            <input id="txtoct_codigo" name="txtoct_codigo" class="form-control"
                                   placeholder="Código" required
                                   minlength="1" maxlength="10" pattern=".{1,10}" title="1 a 10 caracteres"
                                   autocomplete="off"
                                   onkeyup="validaAlfaNumericoSemAcentosNemEspaco(this,0)" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Descrição<span class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <input id="txtoct_descricao" name="txtoct_descricao" class="form-control"
                                   placeholder="Descrição" required
                                   maxlength="255" pattern=".{1,255}" title="1 a 255 caracteres"
                                   autocomplete="off"
                                   onblur="validaAlfaNumerico(this)" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-sm-2" for="rpt_ativo">Ativo </label>
                        <div class="col-sm-10">
                            <input type="checkbox" id="chkoct_ativo" style="margin-top: 10px;">
                        </div>
                    </div>
                </div>

                <input type="hidden" id="txtOctId" />
                <div class="modal-footer">
                    <div class="col-md-3 col-md-offset-4">
                        <button id="bntSalvar" name="bntSalvar" onclick="return ConservaTipo_Salvar();" class="btn btn-primary btn-block btn-flat">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

