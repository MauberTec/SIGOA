@{
    ViewBag.Title = "::.. Unidades de Medida ..::";
}

@model List<WebApp.Models.Usuario>
@using WebApp.Models
@{
    //Verifica se o usuário esta logado
    if (Session["Usuario"] == null)
    {
        Html.Action("LogSistema_Salvar", "LogSistema", new { mod_id = 400 });
       Response.Redirect("~/AcessoNegado/AcessoNegado");
    }

    Usuario gUsuario = (Usuario)Session["Usuario"];
    List<UsuarioPermissoes> lstPermissoes = gUsuario.lstUsuarioPermissoes;
    UsuarioPermissoes permissoesDesteModulo = lstPermissoes.Find(x => x.mod_id.Equals(400)); // 400 = id DO MODULO "UNIDADES"
    if (permissoesDesteModulo == null)
    {
        Html.Action("LogSistema_Salvar", "LogSistema", new { mod_id = 400 });
       Response.Redirect("~/AcessoNegado/AcessoNegado");
    }

}

<h2></h2>
<div style="width:90%; margin:0 auto;">

    <table id="tblUnidade_Tipos">
        <thead>
            <tr>
                <th colspan="3">
                    <label>Localizar </label>

                    <input id="txtLocalizarUnidade_Tipo" type="search" class="form-control" style="width:350px; display:inline"
                           onkeyup="Unidade_Tipo_Filtrar()">

                    <i class="fa fa-search"></i>

                    <a href="#" onclick="Unidade_Tipo_LimparFiltro()"><span class="glyphicon glyphicon-remove text-danger"></span></a>
                </th>
            </tr>
            <tr>
                <th>unt_id</th>
                <th>Tipo de Unidade</th>
                <th>Opções</th>
            </tr>
        </thead>
    </table>
    @{
        if ((permissoesDesteModulo != null) && (permissoesDesteModulo.mfl_inserir > 0))
        {
            <button type="button" class="btn btn-primary  botaoInserir" onclick="Unidade_Tipo_Inserir();">Novo Tipo de Unidade</button>
        }
    }

    <br />
    <br />
    <br />

    <div id="subGrids" style="visibility:hidden">
        <h4 id="HeaderUnidade_Tipo"> </h4>

        <table id="tblUnidades">
            <thead>
                <tr>
                    <th>uni_id</th>
                    <th>unt_id</th>
                    <th>Unidade</th>
                    <th>Descricao</th>
                    <th>Tipo</th>
                    <th>Opções</th>
                </tr>
            </thead>
        </table>

        @{
            if ((permissoesDesteModulo != null) && (permissoesDesteModulo.mfl_inserir > 0))
            {
                <button type="button" class="btn btn-primary  botaoInserir" data-toggle="modal" data-target="#myModal" onclick="Unidade_Inserir();">Nova Unidade</button>
            }
        }

    </div>

    <br /><br />
    <input type="hidden" id="hddnSelecteduni_id" name="hddnSelecteduni_id" value="-1" />
    <hr />


</div>


<link href="~/Content/Gerais.css" rel="stylesheet" />
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/plugins/sweetalert2.min.js"></script>

@section Scripts{
    <script>
        var permissaoLeitura = parseInt(@permissoesDesteModulo.mfl_leitura);
        var permissaoEscrita = parseInt(@permissoesDesteModulo.mfl_escrita);
        var permissaoInsercao = parseInt(@permissoesDesteModulo.mfl_inserir);
        var permissaoExclusao = parseInt(@permissoesDesteModulo.mfl_excluir);
    </script>

}
<script src="~/Scripts/Base.js"></script>
<script src="~/Scripts/Unidade/Unidade.js"></script>


<div class="modal fade" id="modalSalvarRegistro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="margin-left:150px; width:550px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title text-center"><b><label id="lblModalHeader">Editar Unidade</label></b></h3>
            </div>
            <form class="form-horizontal" onkeydown="if (event.keyCode == 13) { event.preventDefault(); return false; }">
                <br />
                <div class="modal-body form-group">

                    <div class="form-group">
                        <label class="control-label col-sm-2">Tipo<span class="text-danger">*</span></label>
                        <div class="col-sm-10">
                            <select class="form-control" id="cmbUnidade_Tipo"
                                    placeholder="Unidade_Tipo"
                                    name="cmbUnidade_Tipo"></select>

                        </div>
                    </div>

                    <div class="form-group" style="display:none;">
                        <label class="control-label col-sm-2" for="uni_id">ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtuni_id" placeholder="Id" disabled="disabled" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-sm-2">Unidade<span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            <input id="txtuni_unidade" name="txtuni_unidade" class="form-control"
                                   placeholder="Unidade" data-val="true"
                                   data-val-required="Unidade" required
                                   maxlength="10" pattern=".{1,10}" title="1 a 10 caracteres"
                                   autocomplete="off"
                                   onblur="ChecaRepetido(this)" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Descrição<span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            <input id="txtuni_descricao" name="txtuni_descricao" class="form-control"
                                   placeholder="Descrição" data-val="true"
                                   data-val-required="Descrição da Unidade" required
                                   maxlength="255" pattern=".{1,255}" title="1 a 255 caracteres"
                                   autocomplete="off" />
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <div class="col-md-3 col-md-offset-4">
                        <button id="bntSalvar" name="bntSalvar" onclick="return Unidade_Salvar();" class="btn btn-primary btn-block btn-flat">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="modalSalvarUnidade_Tipo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="margin-left:150px; width:550px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title text-center"><b><label id="lblModalHeaderUnidade_Tipo">Editar Tipo de Unidade</label></b></h3>
            </div>
            <form class="form-horizontal" onkeydown="if (event.keyCode == 13) { event.preventDefault(); return false; }">
                <br />
                <div class="modal-body form-group">

                    <div class="form-group">
                        <label class="control-label col-sm-2">Descrição<span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            <input id="txtunt_nome" name="txtunt_nome" class="form-control"
                                   placeholder="Tipo de Unidade" data-val="true" required
                                   maxlength="150"
                                   autocomplete="off" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="col-md-3 col-md-offset-4">
                        <button id="bntSalvar" name="bntSalvar" onclick="return Unidade_Tipo_Salvar();" class="btn btn-primary btn-block btn-flat">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

